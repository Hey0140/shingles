<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="295dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/room_item_cardview"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="10dp"
        >

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/room_item_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_studio"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/room_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_item_cardview"
        app:layout_constraintLeft_toLeftOf="@id/room_item_cardview"
        android:text="Orange room"
        android:textSize="20dp"
        android:fontFamily="@font/gmarket"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/room_item_constraint1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_item_text"
        android:layout_marginTop="9dp"
        app:layout_constraintLeft_toLeftOf="@id/room_item_cardview"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/room_item_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1시간"
            android:fontFamily="@font/gmarket"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/room_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13%"
            android:fontFamily="@font/gmarket"
            android:textSize="11dp"
            android:textColor="#FF4747"
            app:layout_constraintLeft_toRightOf="@id/room_item_hour"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/room_item_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20,000원"
            android:fontFamily="@font/gmarket"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/room_item_discount"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/room_item_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23,000원"
            android:fontFamily="@font/gmarket"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@id/room_item_account"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/room_item_constraint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_item_constraint1"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toLeftOf="@id/room_item_cardview"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/room_item_hour2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2시간"
            android:fontFamily="@font/gmarket"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/room_item_discount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13%"
            android:fontFamily="@font/gmarket"
            android:textSize="10dp"
            android:textColor="#FF4747"
            app:layout_constraintLeft_toRightOf="@id/room_item_hour2"
            android:layout_marginLeft="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/room_item_account2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40,000원"
            android:fontFamily="@font/gmarket"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/room_item_discount2"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/room_item_origin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="46,000원"
            android:fontFamily="@font/gmarket"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@id/room_item_account2"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>