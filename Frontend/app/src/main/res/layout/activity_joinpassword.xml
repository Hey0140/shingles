<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity">

    <ImageView
        android:id="@+id/join_pw_image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/plusm_logo"/>

    <View
        android:id="@+id/join2_view"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        app:layout_constraintTop_toBottomOf="@id/join_pw_image_logo"
        />

    <LinearLayout
        android:id="@+id/join2_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/join2_view"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="10dp"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:textColor="@color/grey"
            />
        <EditText
            android:id="@+id/join_pw"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:hint="비밀번호를 입력하세요"
            android:textSize="12dp"
            android:inputType="textPassword"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:textColor="#cccccc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textSize="10dp"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:textColor="@color/grey"
            />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/join_pw_confirm"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:hint="비밀번호를 다시 입력해 주세요"
            android:textSize="12dp"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:textColor="#cccccc"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/join2_continue_button"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:text="가입하기"
            android:fontFamily="@font/gmarketsansttfmedium"
            android:textColor="@color/main_color"
            android:background="@drawable/deactivated_button"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>