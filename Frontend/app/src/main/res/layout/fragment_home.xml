<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="120dp"
            android:layout_height="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/plusm_logo"/>
        <View
            android:id="@+id/top_line_main"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintTop_toBottomOf="@+id/main_logo"
            app:layout_constraintLeft_toLeftOf="@+id/main_logo"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/line_main"
            />
        <View
            android:id="@+id/search_map"
            android:layout_width="170dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/top_line_main"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/search_rec_1"/>

        <ImageView
            android:id="@+id/main_icon"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toLeftOf="@id/search_map"
            app:layout_constraintTop_toTopOf="@id/search_map"
            app:layout_constraintBottom_toBottomOf="@id/search_map"
            android:src="@drawable/vector"/>

        <TextView
            android:id="@+id/search_map_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="전체 지역"
            app:layout_constraintLeft_toRightOf="@id/main_icon"
            app:layout_constraintTop_toTopOf="@id/search_map"
            app:layout_constraintBottom_toBottomOf="@id/search_map"
            android:layout_marginLeft="7dp"
            android:fontFamily="@font/gmarket"
            android:textColor="#909090"
            android:letterSpacing="-0.12"/>



        <ImageView
            android:id="@+id/search_date"
            android:layout_width="170dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/top_line_main"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="17dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_rec_1"/>
        <ImageView
            android:id="@+id/date_icon"
            android:layout_width="23dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="@id/search_date"
            app:layout_constraintTop_toTopOf="@id/search_date"
            app:layout_constraintBottom_toBottomOf="@id/search_date"
            android:src="@drawable/date_icon"
            android:layout_marginLeft="7dp"/>

        <TextView
            android:id="@+id/search_calender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="날짜 / 시간"
            app:layout_constraintLeft_toRightOf="@id/date_icon"
            app:layout_constraintTop_toTopOf="@id/search_date"
            app:layout_constraintBottom_toBottomOf="@id/search_date"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/gmarket"
            android:textColor="#909090"
            android:letterSpacing="-0.12"/>

        <ImageView
            android:id="@+id/search_room"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@id/search_map"
            app:layout_constraintLeft_toLeftOf="@id/search_map"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/search_main"/>
        <ImageView
            android:id="@+id/question_icon"
            android:layout_width="20dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@id/search_room"
            app:layout_constraintBottom_toBottomOf="@id/search_room"
            app:layout_constraintLeft_toLeftOf="@id/search_room"
            android:src="@drawable/question_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/question_icon"
            app:layout_constraintTop_toTopOf="@id/search_room"
            app:layout_constraintBottom_toBottomOf="@id/search_room"
            android:layout_marginLeft="6dp"
            android:text="찾는 합주실 이름이 뭐예요?"
            android:textSize="13dp"
            android:textColor="#909090"
            android:letterSpacing="-0.09"/>
        <ImageView
            android:id="@+id/anouncement_main"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:layout_constraintTop_toBottomOf="@id/search_room"
            android:layout_marginTop="15dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/anouncement_main"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/anouncement_ment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/anouncement_main"
            app:layout_constraintTop_toTopOf="@id/anouncement_main"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp">
            <TextView
                android:id="@+id/master_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우영곤듀 님,"
                app:layout_constraintLeft_toLeftOf="@id/anouncement_ment"
                app:layout_constraintTop_toTopOf="@id/anouncement_ment"
                android:textSize="23dp"
                android:fontFamily="@font/gmarketsansttfbold"
                android:textColor="#5B5B5B"
                android:letterSpacing="-0.05"
                />
            <TextView
                android:id="@+id/reserv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5월 18일"
                android:textColor="@color/main_color"
                app:layout_constraintLeft_toLeftOf="@id/master_text"
                app:layout_constraintTop_toBottomOf="@id/master_text"
                android:textSize="21dp"
                android:fontFamily="@font/gmarket"
                android:layout_marginTop="8dp"
                android:letterSpacing="-0.05"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화요일에 비쥬합주실 1호점"
                app:layout_constraintLeft_toRightOf="@id/reserv_date"
                app:layout_constraintBottom_toBottomOf="@id/reserv_date"
                android:layout_marginLeft="8dp"
                android:textSize="19dp"
                android:fontFamily="@font/gmarket"
                android:textColor="#545454"
                android:letterSpacing="-0.05"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orange Room 에서 합주가 잡혀 있어요!"
                app:layout_constraintTop_toBottomOf="@id/reserv_date"
                app:layout_constraintLeft_toLeftOf="@id/reserv_date"
                android:layout_marginTop="5dp"
                android:textSize="19dp"
                android:fontFamily="@font/gmarket"
                android:textColor="#545454"
                android:letterSpacing="-0.05"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/alarm_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="@id/anouncement_main"
            app:layout_constraintRight_toRightOf="@id/anouncement_main"
            app:layout_constraintTop_toBottomOf="@id/anouncement_ment"
            android:layout_marginTop="3dp"
            android:src="@drawable/alarm_icon"/>
        <ImageView
            android:id="@+id/anouncement_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/alarm_icon"
            app:layout_constraintBottom_toBottomOf="@id/anouncement_main"
            app:layout_constraintLeft_toLeftOf="@id/anouncement_main"
            app:layout_constraintRight_toRightOf="@id/anouncement_main"
            android:src="@drawable/anouncement_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/anouncement_button"
            app:layout_constraintBottom_toBottomOf="@id/anouncement_button"
            app:layout_constraintLeft_toLeftOf="@id/anouncement_button"
            app:layout_constraintRight_toRightOf="@id/anouncement_button"
            android:text="팀원에게 알리기"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:fontFamily="@font/gmarketsansttfbold"
            android:letterSpacing="-0.1"/>
        <View
            android:id="@+id/middle_line"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/anouncement_main"
            android:layout_marginTop="12dp"
            android:background="#EBEBEB"
            />

        <LinearLayout
            android:id="@+id/benefit_main"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/middle_line"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="22dp"
                android:src="@drawable/benefit_menu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:text="혜택"
                android:textSize="22dp"
                android:fontFamily="@font/gmarket"
                android:letterSpacing="-0.05"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/benefit_menu"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/benefit_main"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/benefit_menu_1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="@id/benefit_menu"
                app:layout_constraintLeft_toLeftOf="@id/benefit_menu"
                android:src="@drawable/benefit_clicked_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/benefit_menu_1"
                app:layout_constraintRight_toRightOf="@id/benefit_menu_1"
                app:layout_constraintTop_toTopOf="@id/benefit_menu_1"
                app:layout_constraintBottom_toBottomOf="@id/benefit_menu_1"
                android:text="전체"
                android:textColor="@color/white"
                android:fontFamily="@font/gmarket"
                android:textSize="10dp"/>
            <ImageView
                android:id="@+id/benefit_menu_2"
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:layout_constraintLeft_toRightOf="@id/benefit_menu_1"
                app:layout_constraintTop_toTopOf="@id/benefit_menu"
                android:layout_marginLeft="15dp"
                android:src="@drawable/benefit_unclicked_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/benefit_menu_2"
                app:layout_constraintRight_toRightOf="@id/benefit_menu_2"
                app:layout_constraintTop_toTopOf="@id/benefit_menu_2"
                app:layout_constraintBottom_toBottomOf="@id/benefit_menu_2"
                android:text="쿠폰"
                android:textColor="#676767"
                android:fontFamily="@font/gmarket"
                android:textSize="10dp"/>
            <ImageView
                android:id="@+id/benefit_menu_3"
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:layout_constraintLeft_toRightOf="@id/benefit_menu_2"
                app:layout_constraintTop_toTopOf="@id/benefit_menu"
                android:layout_marginLeft="15dp"
                android:src="@drawable/benefit_unclicked_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/benefit_menu_3"
                app:layout_constraintRight_toRightOf="@id/benefit_menu_3"
                app:layout_constraintTop_toTopOf="@id/benefit_menu_3"
                app:layout_constraintBottom_toBottomOf="@id/benefit_menu_3"
                android:text="특가"
                android:textColor="#676767"
                android:fontFamily="@font/gmarket"
                android:textSize="10dp"/>
            <ImageView
                android:id="@+id/benefit_menu_4"
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:layout_constraintLeft_toRightOf="@id/benefit_menu_3"
                app:layout_constraintTop_toTopOf="@id/benefit_menu"
                android:layout_marginLeft="15dp"
                android:src="@drawable/benefit_unclicked_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/benefit_menu_4"
                app:layout_constraintRight_toRightOf="@id/benefit_menu_4"
                app:layout_constraintTop_toTopOf="@id/benefit_menu_4"
                app:layout_constraintBottom_toBottomOf="@id/benefit_menu_4"
                android:text="인기"
                android:textColor="#676767"
                android:fontFamily="@font/gmarket"
                android:textSize="10dp"/>
            <ImageView
                android:id="@+id/benefit_menu_5"
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:layout_constraintLeft_toRightOf="@id/benefit_menu_4"
                app:layout_constraintTop_toTopOf="@id/benefit_menu"
                android:layout_marginLeft="15dp"
                android:src="@drawable/benefit_unclicked_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/benefit_menu_5"
                app:layout_constraintRight_toRightOf="@id/benefit_menu_5"
                app:layout_constraintTop_toTopOf="@id/benefit_menu_5"
                app:layout_constraintBottom_toBottomOf="@id/benefit_menu_5"
                android:text="포인트"
                android:textColor="#676767"
                android:fontFamily="@font/gmarket"
                android:textSize="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="210dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/benefit_main"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="center"
                android:src="@drawable/ad_main"/>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>